{
	"name": "tg-eventer",
	"version": "0.0.1",
	"scripts": {
		"dev:serve": "vite dev",
		"dev:bot": "nodemon ./bot.js",
		"dev": "cross-env NODE_ENV=development run-p dev:serve dev:bot",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"deploy:gh": "gh-pages -d build -t true",
		"deploy": "run-s build deploy:gh"
	},
	"devDependencies": {
		"@feature-sliced/eslint-config": "^0.1.0-beta.6",
		"@fontsource/fira-mono": "^4.5.10",
		"@neoconfetti/svelte": "^1.0.0",
		"@sveltejs/adapter-auto": "^3.0.0",
		"@sveltejs/adapter-static": "^3.0.1",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^3.0.0",
		"@types/eslint": "8.56.0",
		"@types/eventsource": "^1.1.15",
		"@types/node": "^20.11.19",
		"@typescript-eslint/eslint-plugin": "^6.0.0",
		"@typescript-eslint/parser": "^6.0.0",
		"effector-logger": "^0.15.0",
		"eslint": "^8.57.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-boundaries": "^4.2.0",
		"eslint-plugin-import": "^2.29.1",
		"eslint-plugin-svelte": "^2.35.1",
		"gh-pages": "^6.1.1",
		"prettier": "^3.1.1",
		"prettier-plugin-svelte": "^3.1.2",
		"svelte": "^4.2.7",
		"svelte-check": "^3.6.0",
		"telegraf": "^4.15.3",
		"telegram-webapps-types": "^1.0.5",
		"tslib": "^2.4.1",
		"typescript": "^5.0.0",
		"vite": "^5.1.3",
		"vite-plugin-ngrok": "^1.0.0"
	},
	"type": "module",
	"dependencies": {
		"axios": "^1.6.7",
		"classnames": "^2.5.1",
		"cross-env": "^7.0.3",
		"dotenv": "^16.4.5",
		"effector": "^23.2.0",
		"eventsource": "^2.0.2",
		"nodemon": "^3.1.0",
		"npm-run-all": "^4.1.5",
		"rxjs": "^7.8.1"
	}
}
