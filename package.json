{
	"name": "tg-eventer",
	"version": "0.0.1",
	"scripts": {
		"preinstall": "npm run cert-gen",
		"server:dev": "vite dev",
		"bot:dev": "nodemon ./bot.js",
		"dev": "cross-env NODE_ENV=development run-p server:dev bot:dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"cert-gen": "mkdir cert && openssl req -x509 -nodes -days 365 -newkey rsa:2048 -keyout ./cert/cert.key -out ./cert/cert.crt",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write ."
	},
	"devDependencies": {
		"@fontsource/fira-mono": "^4.5.10",
		"@neoconfetti/svelte": "^1.0.0",
		"@sveltejs/adapter-auto": "^3.0.0",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^3.0.0",
		"@types/eslint": "8.56.0",
		"@types/node": "^20.11.19",
		"@typescript-eslint/eslint-plugin": "^6.0.0",
		"@typescript-eslint/parser": "^6.0.0",
		"eslint": "^8.56.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.35.1",
		"prettier": "^3.1.1",
		"prettier-plugin-svelte": "^3.1.2",
		"svelte": "^4.2.7",
		"svelte-check": "^3.6.0",
		"tslib": "^2.4.1",
		"typescript": "^5.0.0",
		"vite": "^5.1.3"
	},
	"type": "module",
	"dependencies": {
		"axios": "^1.6.7",
		"classnames": "^2.5.1",
		"cross-env": "^7.0.3",
		"dotenv": "^16.4.5",
		"effector": "^23.2.0",
		"effector-logger": "^0.15.0",
		"nodemon": "^3.1.0",
		"npm-run-all": "^4.1.5",
		"rxjs": "^7.8.1",
		"telegraf": "^4.15.3",
		"telegram-webapps-types": "^1.0.5"
	}
}
